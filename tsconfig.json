{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src", // Pointe vers src comme racine
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Inclut uniquement les fichiers dans src et ses sous-dossiers
  "exclude": ["node_modules", "dist"]
}