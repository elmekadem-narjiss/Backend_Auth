{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "types": ["mocha", "node", "nock", "sinon"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test/**/*"]
}