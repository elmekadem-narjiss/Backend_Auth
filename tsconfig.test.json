{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./test-dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "mocha", "supertest"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["test/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}